{
    "name": "@warbler/frontend",
    "version": "0.0.1",
    "description": "Yet Another Comment System",
    "repository": "warblerorg/warbler",
    "bugs": "https://github.com/warblerorg/warbler/issues",
    "homepage": "https://github.com/warblerorg/warbler#readme",
    "license": "MIT",
    "scripts": {
        "test": "jest",
        "build": "rollup -c",
        "lint:ts": "prettier --parser typescript \"src/**/*.{ts,tsx}\"",
        "lint:css": "prettier --parser css \"**/*.css\"",
        "lint": "tsc --noEmit && npm run lint:ts -- --write && npm run lint:css -- --write",
        "lint:check": "tsc --noEmit && npm run lint:ts -- --check && npm run lint:css -- --check"
    },
    "dependencies": {},
    "devDependencies": {
        "@types/jest": "^24.0.11",
        "http-server": "^0.11.1",
        "jest": "^24.5.0",
        "prettier": "^1.16.4",
        "rollup": "^1.6.0",
        "rollup-plugin-typescript": "^1.0.0",
        "ts-jest": "^24.0.0",
        "tslib": "^1.9.3",
        "typescript": "^3.3.3333"
    },
    "engines": {
        "node": ">=10.14.2"
    },
    "jest": {
        "preset": "ts-jest/presets/js-with-ts"
    },
    "prettier": {
        "singleQuote": true,
        "trailingComma": "all",
        "proseWrap": "always"
    }
}
